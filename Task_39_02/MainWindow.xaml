<Window x:Class="Task_39_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_39_02"
        mc:Ignorable="d"
         Title="Список покупок" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель ввода -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtProduct" Width="200" Margin="0,0,5,0"/>
            <Button x:Name="btnAdd" Content="Добавить" Width="80" Click="BtnAdd_Click"/>
        </StackPanel>

        <!-- Список продуктов -->
        <ListBox x:Name="lstProducts" Grid.Row="1" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnRemove" Content="Удалить" Width="80" Margin="0,0,5,0" Click="BtnRemove_Click"/>
            <Button x:Name="btnSave" Content="Сохранить" Width="80" Margin="0,0,5,0" Click="BtnSave_Click"/>
            <Button x:Name="btnLoad" Content="Загрузить" Width="80" Click="BtnLoad_Click"/>
        </StackPanel>
    </Grid>
</Window>